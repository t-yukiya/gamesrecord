<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-8 offset-md-1">
     <h2>一覧</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
             <th></th>
             <th>Title</th>
             <th>Opinion</th>
             <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @posts.each do |post| %>
           <td><%= link_to post.customer.name, post.customer %></td>
            <td><%= link_to post.title, post_path(post.id) %></td>
            <td><%= post.body %></td>
          </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>