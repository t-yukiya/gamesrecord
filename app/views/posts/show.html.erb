<div class="container px-5 px-sm-0">
  <div class="row">
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Record</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><strong><h2><%= @post.title %></h2></strong></td>
              <td><%= @post.created_at.strftime('%Y/%m/%d') %></td>
                <td>
                  <% if @post.customer == current_customer %>
                  <%= link_to "Edit", edit_post_path(@post.id), class: 'btn btn-sm btn-success' %>
                  <% end %>
                </td>
                <td>
                  <% if @post.customer == current_customer %>
                  <%= link_to "Destroy", post_path(@post), method: :delete,  "data-confirm" => "本当に削除しますか？", class: 'btn btn-sm btn-danger' %>
                  <% end %>
                </td>
            </tr>
        </tbody>
      </table>
      <p><%= @post.body %></p>
    </div>
  </div>
</div>